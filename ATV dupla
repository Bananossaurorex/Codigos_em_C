#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#define Q 2
#define P 3

        int main(){
        setlocale(LC_ALL,"");
        int num[Q][P],i,j,somatotal=0,media[Q],peso[3]={3,3,4};
        char materia[Q][200];
    
        
	for (i=0;i<Q;i++){
	printf("Digite a matéria: ");
	scanf("%s",&materia[i]);
	
	for (j=0;j<P;j++){
	printf("Sua nota: ");
	scanf("%i",&num[i][j]);
	somatotal=(num[i][j])*peso[j];

}		
    media[i]=somatotal;
    printf("Média: %i\n",media[i]);
    somatotal=0;
}
}
