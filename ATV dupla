#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#define Q 2
#define P 3

        int main(){
        setlocale(LC_ALL,"");
        float nota[Q][P],soma=0,somatotal=0,media[Q],peso[3]={3,3,4};
        char materia[Q][200];
        int i,j;
    
    do {
	for (i=0;i<Q;i++){
	printf("Digite a matéria: ");
	scanf("%s",&materia[i]);
	
	for (j=0;j<P;j++){
	printf("Sua nota: ");
	scanf("%f",&nota[i][j]);
	
	soma=nota[i][j]*peso[j];
	somatotal+=soma;
}		
    media[i]=somatotal/10;
    somatotal=0;
	system("cls");
}
}  while (nota[i][j]>10  && media>10);


	for (i=0;i<Q;i++){
		printf("\n%i-Materia: %s\n",i+1,materia[i]);
	for (j=0;j<P;j++){
	printf("%i-Nota : %.2f peso %.2f\n",j+1,nota[i][j],peso[j]);
}	printf("Média: %.2f\n",media[i]);
}
}
