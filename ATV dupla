#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#define Q 2
#define P 3

        int main(){
        setlocale(LC_ALL,"");
        int nota[Q][P],i,j,soma=0,somatotal=0,media[Q],peso[3]={3,3,4};
        char materia[Q][200];
    
        
	for (i=0;i<Q;i++){
	printf("Digite a matéria: ");
	scanf("%s",&materia[i]);
	
	for (j=0;j<P;j++){
	printf("Sua nota: ");
	scanf("%i",&nota[i][j]);
	
	soma=nota[i][j]*peso[j];
	somatotal+=soma;

}		
    media[i]=somatotal/10;
	system("cls");
}
	for (i=0;i<Q;i++){
		printf("\n%i-Materia: %s\n",i+1,materia[i]);
	for (j=0;j<P;j++){
	printf("%i-Nota : %i peso %i\n",j+1,nota[i][j],peso[j]);
}	printf("Média: %i\n",media[i]);
}
}
